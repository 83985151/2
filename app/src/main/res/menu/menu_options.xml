<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Parent menu item for font size options -->
    <item
        android:id="@+id/menu_font_size"
        android:title="字体大小"
        app:showAsAction="withText">
        <!-- Submenu for font size options -->
        <menu>
            <group
                android:id="@+id/font_size_group"
                android:checkableBehavior="single">
                <item
                    android:id="@+id/font_size_small"
                    android:title="小号字体 (10sp)"
                    android:checkable="true"/>
                <item
                    android:id="@+id/font_size_medium"
                    android:title="中号字体 (16sp)"
                    android:checkable="true"/>
                <item
                    android:id="@+id/font_size_large"
                    android:title="大号字体 (20sp)"
                    android:checkable="true"/>
            </group>
        </menu>
    </item>

    <!-- A regular menu item -->
    <item
        android:id="@+id/menu_normal_item"
        android:title="普通菜单项"
        app:showAsAction="withText"/>

    <!-- Parent menu item for font color options -->
    <item
        android:id="@+id/menu_font_color"
        android:title="字体颜色"
        app:showAsAction="withText">
        <!-- Submenu for font color options -->
        <menu>
            <group
                android:id="@+id/font_color_group"
                android:checkableBehavior="single">
                <item
                    android:id="@+id/font_color_red"
                    android:title="红色"
                    android:checkable="true"/>
                <item
                    android:id="@+id/font_color_black"
                    android:title="黑色"
                    android:checkable="true"/>
            </group>
        </menu>
    </item>
</menu>